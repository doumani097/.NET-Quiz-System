@model QuizApp_Model.Exam
@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron">
  <h1 class="display-4">@Model.Name</h1>
  <p class="text-muted">
      @Model.ShortDescription
  </p>
  <p class="lead">
      @Model.Description
  </p>
  <hr class="my-5">
  <p class="text-muted">
      <div class="row">
        @foreach(var question in Model.Questions)
        {
            <div class="col-md-3">
                <span class="text-muted">Question @question.Number / @question.Mark marks</span>
            </div>    
        }
      </div>
    </p>
    <hr class="my-5">
    <p class="text-muted">
        <span>Total Questions : @Model.Questions.Count() Questions</span>
        <span class="float-right">Total Marks : @Model.Questions.Sum(q => q.Mark) Marks</span>
    </p>

    <form asp-action="Quiz" method="get">
        <input type="hidden" value="@Model.Id" name="id" />
        <button type="submit" class="btn btn-primary btn-lg mt-3">Start Quiz</button>
    </form>

</div>